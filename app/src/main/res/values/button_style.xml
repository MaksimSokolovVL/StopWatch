<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:paddingStart">70dp</item>
        <item name="android:paddingEnd">70dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyButtonStyle.Stop">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">22sp</item>
        <item name="strokeColor">@color/red</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="MyButtonStyle.Pause">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

</resources>